    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "ts-loader": "^2.3.4",
    "tslib": "^1.6.0",
    "typedoc": "^0.6.0",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.5.2",
    "webpack": "^3.5.4",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.0"
  }
}
