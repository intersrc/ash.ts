    "clean-webpack-plugin": "^0.1.16",
    "dts-bundle": "^0.7.2",
    "ejs": "^2.5.7",
    "express": "^4.15.2",
    "file": "^0.2.2",
    "html-webpack-plugin": "^2.28.0",
    "karma": "^1.6.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^2.0.3",
    "karma-webpack-preprocessor": "^1.0.1",
    "mocha": "^3.2.0",
