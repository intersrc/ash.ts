{
  "compileOnSave": false,
  "compilerOptions": {

    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,

    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,

    "suppressImplicitAnyIndexErrors": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "paths": {
      "ash": [ "../src/ash" ]
    }
  }
}
